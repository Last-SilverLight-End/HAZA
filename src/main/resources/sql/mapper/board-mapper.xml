<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="board">
    <select id="getBoardList" resultMap="boardMap">
        SELECT
        BD.id AS ID
        ,BD.board_title AS TITLE
        ,BD.board_content AS CONTENT
        ,BD.board_hit AS HIT
        ,BD.created_date AS CREATED_DATE
        ,BD.modified_date AS MODIFIED_DATE
        FROM board BD order by BD.CREATED_DATE
    </select>

    <resultMap id="boardMap" type="HAZAGroup.HAZACommunity.rest.board.dto.BoardDto">
        <result property="id" column="ID" />
        <result property="title" column="TITLE" />
        <result property="content" column="CONTENT" />
        <result property="hit" column="HIT" />
        <result property="created_date" column="CREATED_DATE" />
        <result property="modified_date" column="MODIFIED_DATE" />
    </resultMap>

</mapper>
